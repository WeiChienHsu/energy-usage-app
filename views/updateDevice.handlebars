<div class="row">
<div class="col-12 col-m-12 col-p-1 ">
<div class="form-container">
    <h1>Edit {{device.name}}:</h1>
    <form id="update-device" action="/updatedevice" method="post">
    <div class="form-group">
        <label for="name">Name:</label>
        <input class="form-control" type="text" name="name" value="{{device.name}}" required>
    </div>
    <div class="form-group">
        <label for="manufacturer">Manufacturer:</label>
        <input class="form-control" type="text" name="manufacturer" value="{{device.manufacturer}}" required>
    </div>
        <div class="form-group">
        <label for="deviceOnOff">Device On/Off:</label>
        <select class="form-control" name="deviceOnOff"> 
          <option value = "0" name="deviceOnOff"> Turn Off (0) </option>
          <option value = "1" name="deviceOnOff"> Turn On (1) </option>
        </select>
        {{!-- <input class="form-control" type="text" name="deviceOnOff" value="{{device.deviceOnOff}}" required> --}}
    </div>
    </form>
    <button class="form-control btn btn-default btn-success" onclick="updateDevice({{device.id}})">Update</button>
</div>
</div>
</div>
