<div class="row">
<div class="col-12 col-m-12 col-p-12 ">
<div class="form-container">

  <div class="modal-dialog" role="document">
    <form id="login" action="/login" method="POST">
    <div class="modal-content">
      <div class="modal-header text-center">
        <h4 class="modal-title w-100 font-weight-bold">Login</h4>
      </div>
      <div class="modal-body mx-3">
        <div class="md-form mb-5 form-group">
          <label for="email"> Email </label>
          <input type="email" id="email" name="email" class="form-control validate" placeholder="abc@gmail.com" required>
        </div>
        <div class="md-form mb-5 form-group">
          <label for="password"> Password </label>
          <input type="password" id="password" name="password" class="form-control validate" placeholder="*******" required>
        </div>
        <div class="md-form mb-5 form-group">
          <h4> Test Account: test@test.com || test</h4>
        </div>
      </div>

      <div class="modal-footer d-flex justify-content-center">
        <button type="submit" class="btn btn-lg btn-primary btn-block text-uppercase" >Login</button>
      </div>
      <div class="modal-footer d-flex justify-content-center">
        <a href="/login" class="btn btn-lg btn-danger btn-block text-uppercase">Biometric Login (in progress)</a>
      </div>
       <div class="modal-footer d-flex justify-content-center">
        <a href="/signup" class="btn btn-lg btn-info btn-block text-uppercase">New User Signup</a>
      </div>     
    </div>
    </form>
  </div>

</div>
</div>
</div>




  